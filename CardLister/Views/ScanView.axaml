<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:FlipKit.Desktop.ViewModels"
             xmlns:conv="using:FlipKit.Desktop.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
             x:Class="FlipKit.Desktop.Views.ScanView"
             x:DataType="vm:ScanViewModel"
             x:Name="ScanRoot">

    <UserControl.Resources>
        <conv:ConfidenceToColorConverter x:Key="ConfidenceToColorConverter"/>
        <conv:FilePathToBitmapConverter x:Key="FilePathToBitmapConverter"/>
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="24,24,24,8">
            <TextBlock Text="Scan Card" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Upload a card image, scan with AI, review and save"
                       Opacity="0.6" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Main Content: Two columns -->
        <Grid Grid.Row="1" ColumnDefinitions="350,*" Margin="24,8">

            <!-- Left Column: Images -->
            <ScrollViewer Grid.Column="0" Margin="0,0,12,0">
                <StackPanel Spacing="8">

                    <!-- Model Selection -->
                    <Border BorderBrush="{DynamicResource SystemBaseLowColor}"
                            BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                        <StackPanel Spacing="6">
                            <TextBlock Text="AI Model" FontSize="12" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding ModelOptions}"
                                      SelectedItem="{Binding SelectedModel}"
                                      HorizontalAlignment="Stretch"/>
                            <TextBlock Text="Free models with auto-fallback on rate limit"
                                       FontSize="10" Opacity="0.5"/>
                        </StackPanel>
                    </Border>

                    <!-- Front Image -->
                    <Border BorderBrush="{DynamicResource SystemBaseLowColor}"
                            BorderThickness="2" CornerRadius="8"
                            Background="{DynamicResource SystemChromeLowColor}"
                            DragDrop.AllowDrop="True">
                        <Grid>
                            <!-- Drop zone placeholder (shown when no image) -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Spacing="12" MinHeight="200"
                                        IsVisible="{Binding ImagePath, Converter={x:Static StringConverters.IsNullOrEmpty}}">
                                <TextBlock Text="Front Image" FontSize="14" FontWeight="SemiBold"
                                           HorizontalAlignment="Center" Opacity="0.6"/>
                                <TextBlock Text="Drop image here" FontSize="16"
                                           HorizontalAlignment="Center" Opacity="0.5"/>
                                <TextBlock Text="or" HorizontalAlignment="Center" Opacity="0.4"/>
                                <Button Content="Browse..." Command="{Binding BrowseImageCommand}"
                                        HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Image preview (shown when image loaded) -->
                            <StackPanel IsVisible="{Binding ImagePath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                        Spacing="8" Margin="8">
                                <TextBlock Text="Front" FontSize="12" FontWeight="SemiBold" Opacity="0.6"
                                           HorizontalAlignment="Center"/>
                                <Image Source="{Binding ImagePath, Converter={StaticResource FilePathToBitmapConverter}}"
                                       MaxHeight="300" Stretch="Uniform"
                                       HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ImagePath}" FontSize="11"
                                           Opacity="0.5" TextTrimming="CharacterEllipsis"
                                           HorizontalAlignment="Center"/>
                                <Button Content="Change Image" Command="{Binding BrowseImageCommand}"
                                        HorizontalAlignment="Center" Padding="16,6"/>
                            </StackPanel>

                            <!-- Scanning overlay -->
                            <Border IsVisible="{Binding IsScanning}"
                                    Background="#80000000" CornerRadius="8">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                                    <ProgressBar IsIndeterminate="True" Width="120"/>
                                    <TextBlock Text="Scanning card with AI..." Foreground="White" FontSize="14"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="This usually takes 5-10 seconds" Foreground="White" FontSize="11"
                                               Opacity="0.7" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Back Image (optional) -->
                    <Border BorderBrush="{DynamicResource SystemBaseLowColor}"
                            BorderThickness="1" CornerRadius="8" Opacity="0.8"
                            Background="{DynamicResource SystemChromeLowColor}">
                        <Grid>
                            <!-- Add back image button (shown when no back image) -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Spacing="6" Margin="12"
                                        IsVisible="{Binding ImagePathBack, Converter={x:Static StringConverters.IsNullOrEmpty}}">
                                <Button Content="+ Add Back Image (Optional)"
                                        Command="{Binding BrowseBackImageCommand}"
                                        HorizontalAlignment="Center" Padding="16,6"/>
                                <TextBlock Text="Helps identify card number, set, and serial number"
                                           FontSize="11" Opacity="0.4" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Back image preview -->
                            <StackPanel IsVisible="{Binding ImagePathBack, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                        Spacing="8" Margin="8">
                                <TextBlock Text="Back" FontSize="12" FontWeight="SemiBold" Opacity="0.6"
                                           HorizontalAlignment="Center"/>
                                <Image Source="{Binding ImagePathBack, Converter={StaticResource FilePathToBitmapConverter}}"
                                       MaxHeight="200" Stretch="Uniform"
                                       HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                                    <Button Content="Change" Command="{Binding BrowseBackImageCommand}"
                                            Padding="12,4" FontSize="12"/>
                                    <Button Content="Remove" Command="{Binding RemoveBackImageCommand}"
                                            Padding="12,4" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Right Column: Card Detail Form -->
            <ScrollViewer Grid.Column="1">
                <StackPanel Spacing="8" Margin="12,0,0,0">

                    <!-- Show form only when card is scanned or entered manually -->
                    <Border IsVisible="{Binding ScannedCard, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <StackPanel Spacing="8"
                                x:DataType="vm:CardDetailViewModel"
                                DataContext="{Binding ScannedCard}">

                        <TextBlock Text="Card Details" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                        <!-- Identity -->
                        <TextBlock Text="Player Name" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding PlayerName}" Watermark="Player Name"/>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8" RowDefinitions="Auto,Auto" RowSpacing="4">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Card #"/>
                            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding CardNumber}" Watermark="#"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Year"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Year}" Watermark="2024"/>
                        </Grid>

                        <TextBlock Text="Sport"/>
                        <ComboBox SelectedItem="{Binding Sport}"
                                  ItemsSource="{x:Static vm:CardDetailViewModel.SportOptions}"
                                  HorizontalAlignment="Stretch"/>

                        <!-- Manufacturer -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8" RowDefinitions="Auto,Auto" RowSpacing="4">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Manufacturer"/>
                            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Manufacturer}" Watermark="Panini"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Brand"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Brand}" Watermark="Prizm"/>
                        </Grid>

                        <TextBlock Text="Team"/>
                        <TextBox Text="{Binding Team}" Watermark="Team Name"/>

                        <!-- Variation -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8" RowDefinitions="Auto,Auto" RowSpacing="4">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Variation Type"/>
                            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding VariationType}" Watermark="Base"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Parallel"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ParallelName}" Watermark="Silver"/>
                        </Grid>

                        <TextBlock Text="Serial Numbered"/>
                        <TextBox Text="{Binding SerialNumbered}" Watermark="/99"/>

                        <!-- Checkboxes -->
                        <WrapPanel Margin="0,4">
                            <CheckBox IsChecked="{Binding IsRookie}" Content="Rookie" Margin="0,0,16,0"/>
                            <CheckBox IsChecked="{Binding IsAuto}" Content="Auto" Margin="0,0,16,0"/>
                            <CheckBox IsChecked="{Binding IsRelic}" Content="Relic" Margin="0,0,16,0"/>
                            <CheckBox IsChecked="{Binding IsShortPrint}" Content="SP" Margin="0,0,16,0"/>
                            <CheckBox IsChecked="{Binding IsSSP}" Content="SSP"/>
                        </WrapPanel>

                        <!-- Condition -->
                        <TextBlock Text="Condition"/>
                        <ComboBox SelectedItem="{Binding Condition}"
                                  ItemsSource="{x:Static vm:CardDetailViewModel.ConditionOptions}"
                                  HorizontalAlignment="Stretch"/>

                        <!-- Grading -->
                        <CheckBox IsChecked="{Binding IsGraded}" Content="Graded" Margin="0,8,0,0"/>

                        <StackPanel IsVisible="{Binding IsGraded}" Spacing="4">
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="8" RowDefinitions="Auto,Auto" RowSpacing="4">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Grading Company"/>
                                <ComboBox Grid.Row="1" Grid.Column="0" IsEditable="True"
                                          x:CompileBindings="False"
                                          Text="{Binding GradeCompany}"
                                          ItemsSource="{Binding GradingCompanyOptions}"
                                          HorizontalAlignment="Stretch"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Card Grade"/>
                                <ComboBox Grid.Row="1" Grid.Column="1"
                                          x:CompileBindings="False"
                                          SelectedItem="{Binding GradeValue}"
                                          ItemsSource="{Binding GradeOptions}"
                                          HorizontalAlignment="Stretch"/>
                            </Grid>
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="8" RowDefinitions="Auto,Auto" RowSpacing="4">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Auto Grade"/>
                                <ComboBox Grid.Row="1" Grid.Column="0"
                                          x:CompileBindings="False"
                                          SelectedItem="{Binding AutoGrade}"
                                          ItemsSource="{Binding AutoGradeOptions}"
                                          HorizontalAlignment="Stretch"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Cert #"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CertNumber}" Watermark="Certificate number"/>
                            </Grid>
                        </StackPanel>

                        <!-- Cost Basis -->
                        <TextBlock Text="Cost Basis" FontWeight="SemiBold" Margin="0,12,0,0"/>
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8" RowDefinitions="Auto,Auto" RowSpacing="4">
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Cost ($)"/>
                            <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding CostBasis}" Watermark="0.00"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Source"/>
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                      SelectedItem="{Binding CostSource}"
                                      ItemsSource="{x:Static vm:CardDetailViewModel.CostSourceOptions}"
                                      HorizontalAlignment="Stretch"/>
                        </Grid>

                        <TextBlock Text="Notes"/>
                        <TextBox Text="{Binding Notes}" Watermark="Optional notes..." AcceptsReturn="True" MinHeight="50"/>
                    </StackPanel>
                    </Border>

                    <!-- Verification Spinner -->
                    <Border IsVisible="{Binding IsVerifying}"
                            BorderBrush="{DynamicResource SystemBaseLowColor}"
                            BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <ProgressBar IsIndeterminate="True" Width="80"/>
                            <TextBlock Text="{Binding VerificationStatus}" VerticalAlignment="Center" Opacity="0.7"/>
                        </StackPanel>
                    </Border>

                    <!-- Verification Results Panel -->
                    <Border IsVisible="{Binding VerificationResult, Converter={x:Static ObjectConverters.IsNotNull}}"
                            BorderBrush="{DynamicResource SystemBaseLowColor}"
                            BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,8,0,0"
                            x:CompileBindings="False">
                        <StackPanel Spacing="8">
                            <!-- Overall Confidence Badge -->
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Verification:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Border CornerRadius="4" Padding="8,4"
                                        Background="{Binding VerificationResult.OverallConfidence, Converter={StaticResource ConfidenceToColorConverter}}">
                                    <TextBlock Text="{Binding VerificationStatus}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>

                            <!-- Field Confidences -->
                            <ItemsControl ItemsSource="{Binding VerificationResult.FieldConfidences}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,2">
                                            <Border Width="8" Height="8" CornerRadius="4"
                                                    Background="{Binding Confidence, Converter={StaticResource ConfidenceToColorConverter}}"/>
                                            <TextBlock FontSize="12" Opacity="0.8">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}: {1}">
                                                        <Binding Path="FieldName"/>
                                                        <Binding Path="Reason"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Warnings -->
                            <ItemsControl ItemsSource="{Binding VerificationResult.Warnings}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="#FF9800" FontSize="12"
                                                   TextWrapping="Wrap" Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Suggestions with Accept/Ignore -->
                            <ItemsControl ItemsSource="{Binding VerificationResult.Suggestions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource SystemBaseLowColor}"
                                                BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,4"
                                                x:CompileBindings="False">
                                            <StackPanel Spacing="6">
                                                <TextBlock Text="{Binding}" FontSize="12" TextWrapping="Wrap"/>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <Button Content="Accept" Padding="12,4" FontSize="11"
                                                            Command="{Binding #ScanRoot.DataContext.AcceptSuggestionCommand}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Content="Ignore" Padding="12,4" FontSize="11"
                                                            Command="{Binding #ScanRoot.DataContext.IgnoreSuggestionCommand}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Placeholder when no card scanned -->
                    <StackPanel IsVisible="{Binding ScannedCard, Converter={x:Static ObjectConverters.IsNull}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Spacing="8" Margin="0,100,0,0">
                        <TextBlock Text="No card scanned yet" FontSize="16" Opacity="0.5"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Upload an image and click Scan, or enter manually"
                                   Opacity="0.4" HorizontalAlignment="Center"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Bottom Button Row -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8"
                    Margin="24,8,24,24" HorizontalAlignment="Left">
            <Button Content="Scan Card" Command="{Binding ScanCardCommand}"
                    IsEnabled="{Binding ImagePath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                    Classes="accent" Padding="20,10"/>
            <Button Content="Enter Manually" Command="{Binding EnterManuallyCommand}"
                    Padding="20,10"/>
            <Button Content="Save to My Cards" Command="{Binding SaveCardCommand}"
                    IsEnabled="{Binding ScannedCard, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Padding="20,10"/>
            <Button Content="Clear" Command="{Binding ClearCommand}"
                    Padding="20,10"/>

            <!-- Messages -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"
                       VerticalAlignment="Center" Margin="12,0,0,0"
                       IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
            <TextBlock Text="{Binding SuccessMessage}" Foreground="Green"
                       VerticalAlignment="Center" Margin="12,0,0,0"
                       IsVisible="{Binding SuccessMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
        </StackPanel>
    </Grid>
</UserControl>
