@inject CardLister.Core.Services.ISettingsService SettingsService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CardLister</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CardLister.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-credit-card-2-front"></i> CardLister
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Scan" asp-action="Index">
                                <i class="bi bi-camera"></i> Scan
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Inventory" asp-action="Index">
                                <i class="bi bi-list-ul"></i> Inventory
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pricing" asp-action="Index">
                                <i class="bi bi-currency-dollar"></i> Pricing
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Export" asp-action="Index">
                                <i class="bi bi-download"></i> Export
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reports" asp-action="Index">
                                <i class="bi bi-graph-up"></i> Reports
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Settings" asp-action="Index">
                                <i class="bi bi-gear"></i> Settings
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @{
        var settings = SettingsService.Load();
        var missingOpenRouter = string.IsNullOrWhiteSpace(settings.OpenRouterApiKey);
        var missingImgBB = string.IsNullOrWhiteSpace(settings.ImgBBApiKey);
    }

    @if (missingOpenRouter || missingImgBB)
    {
        <div class="alert alert-warning alert-dismissible fade show m-3" role="alert" style="overflow-wrap: break-word; word-wrap: break-word;">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill"></i> API Keys Not Configured
            </h5>
            <p class="mb-2" style="line-height: 1.6;">
                <strong>Some features will not work until API keys are configured.</strong>
            </p>
            <ul class="mb-2" style="line-height: 1.6;">
                @if (missingOpenRouter)
                {
                    <li><strong>OpenRouter API Key:</strong> Required for AI card scanning. Scanning will not work without this.</li>
                }
                @if (missingImgBB)
                {
                    <li><strong>ImgBB API Key:</strong> Required for image uploads. Export with images will not work without this.</li>
                }
            </ul>
            <hr>
            <p class="mb-0" style="line-height: 1.6;">
                <i class="bi bi-gear-fill"></i> <strong>To configure API keys:</strong> Open the <strong>CardLister Desktop application</strong> and go to Settings.
                The Web app reads from the same settings file but cannot edit it.
            </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="container-fluid" style="min-height: calc(100vh - 450px);">
        <main role="main" class="pb-5 mb-5" style="overflow-x: auto;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-4" style="background-color: #f8f9fa; position: relative; clear: both;">
        <div class="container">
            <div class="row g-3">
                <div class="col-12 col-lg-9">
                    <p class="mb-2">&copy; 2026 - CardLister - Sports Card Inventory Management</p>
                    <p class="small mb-0" style="line-height: 1.6;">
                        <strong>For educational use only.</strong> No warranties implied. Verify all card identifications, prices, and financial data independently. AI-generated content may contain errors. Use at your own risk. Not intended for professional accounting, tax, or financial advice.
                    </p>
                </div>
                <div class="col-12 col-lg-3 text-lg-end">
                    <p class="small mb-0 text-muted">
                        <a href="https://github.com/mthous72/CardLister" target="_blank" class="text-decoration-none">
                            <i class="bi bi-github"></i> View on GitHub
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
